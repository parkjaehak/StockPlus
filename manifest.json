{
  "manifest_version": 3,
  "name": "StockPlus - 한국투자 Open API 기반 주식 시세 현황",
  "version": "0.0.1",
  "description": "한국투자 Open API 기반 주식 시세 현황판입니다다",
  "icons": {
    "16": "./stockplus_logo.png",
    "48": "./stockplus_logo.png",
    "128": "./stockplus_logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "stockplus_logo.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "StockPlus"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://openapi.koreainvestment.com/*"]
}
