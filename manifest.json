{
  "manifest_version": 3,
  "name": "StockPlus - 한국투자 Open API 기반 주식 시세 현황",
  "version": "0.0.3",
  "description": "한국투자 Open API 기반 주식 시세 현황판입니다다",
  "icons": {
    "16": "./stockplus_logo.png",
    "48": "./stockplus_logo.png",
    "128": "./stockplus_logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "stockplus_logo.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "Alt+Z"
      },
      "description": "StockPlus"
    }
  },
  "background": {
    "service_worker": "js/background/background.js",
    "type": "module"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://openapi.koreainvestment.com/*",
    "ws://ops.koreainvestment.com/*",
    "wss://ops.koreainvestment.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
